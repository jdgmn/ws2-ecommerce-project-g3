<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="branding">
            <img src="/public/images/logo.png" alt="Delulu Delata Logo" /><h1><a href="/">Delulu Delata</a></h1>
            <p>Pag Delata ang Problema...</p>
        </div>
        <nav class="header-nav">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/products" class="active">Products</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
        <div class="auth-links">
            <% if (isLoggedIn) { %>
            <span>Welcome, <%= req.session.user.firstName %>!</span>
            <a href="/users/logout">Logout</a>
            <% } else { %>
            <a href="/users/login">Login</a> | <a href="/users/register">Register</a>
            <% } %>
        </div>
    </header>

    <!-- Products Section -->
    <section class="featured-products">
        <h2>Our Canned Goods Selection</h2>
        <div class="product-list">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product-card">
                        <img src="<%= product.imageUrl || '/public/images/default-can.png' %>" alt="<%= product.name %>">
                        <div class="price">â‚±<%= product.price.toFixed(2) %></div>
                        <h3><%= product.name %></h3>
                        <p><%= product.description %></p>
                        <% if (isLoggedIn) { %>
                        <form action="/buy" method="POST" style="display:inline;">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <input type="number" name="quantity" value="1" min="1" style="width:60px; margin-right:10px;">
                            <button type="submit" class="add-to-cart">Buy Now</button>
                        </form>
                        <% } else { %>
                        <a href="/users/login" class="add-to-cart" style="text-decoration: none;">Login to Buy</a>
                        <% } %>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No products available at the moment. Please check back later!</p>
            <% } %>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <ul>
            <li><a href="/terms">Terms & Conditions</a></li>
            <li><a href="/privacy">Privacy Policy</a></li>
        </ul>
        <p>&copy; 2025 Delulu Delata. All rights reserved.</p>
    </footer>
</body>
</html>
