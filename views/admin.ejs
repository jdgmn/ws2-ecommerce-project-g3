<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="branding">
            <img src="/public/images/logo.png" alt="Delulu Delata Logo" /><h1><a href="/">Delulu Delata</a></h1>
            <p>Pag Delata ang Problema...</p>
        </div>
        <nav class="header-nav">
            <ul>
                <li><a href="/users/admin">Dashboard</a></li>
                <li><a href="/admin/products">Manage Products</a></li>
                <li><a href="/admin/orders">Manage Orders</a></li>
                <li><a href="/admin/reports/sales">Reports</a></li>
                <li><a href="/users/admin" class="active">User Management</a></li>
            </ul>
        </nav>
        <div class="auth-links">
            <span>Welcome, Admin <%= currentUser.firstName %>!</span>
            <a href="/users/logout">Logout</a>
        </div>
    </header>
    <section class="dashboard-section">
        <h1>Admin Dashboard</h1>
        <p class="welcome">Welcome, <%= currentUser.firstName %> (<%= currentUser.role %>). Manage users, products, and orders here.</p>

        <h2>All Registered Users</h2>
        <% if (users.length > 0) { %>
        <table class="user-table">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.userId %></td>
                    <td><%= user.firstName %> <%= user.lastName %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td><%= user.accountStatus %></td>
                    <td><%= user.createdAt.toLocaleDateString() %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p class="no-users">No users registered yet.</p>
        <% } %>

        <h2>User Management</h2>
        <% if (users.length > 0) { %>
        <table class="user-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.firstName %> <%= user.lastName %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/users/edit/<%= user._id %>" class="btn-edit">Edit</a> |
                        <form action="/users/delete/<%= user._id %>" method="POST" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <button type="submit" class="btn-delete">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } %>

        <div class="action-links">
            <a href="/users/register" class="btn-register">Register New User</a>
        </div>
    </section>
    <footer>
        <p>&copy; 2025 Delulu Delata. All rights reserved.</p>
    </footer>
</body>
</html>
