<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="branding">
            <img src="/public/images/logo.png" alt="Delulu Delata Logo" /><h1><a href="/">Delulu Delata</a></h1>
            <p>Pag Delata ang Problema...</p>
        </div>
        <nav class="header-nav">
            <ul>
                <li><a href="/users/admin">Dashboard</a></li>
                <li><a href="/admin/products" class="active">Manage Products</a></li>
                <li><a href="/admin/orders">Manage Orders</a></li>
                <li><a href="/users/admin?tab=users">User Management</a></li>
            </ul>
        </nav>
        <div class="auth-links">
            <span>Welcome, Admin!</span>
            <a href="/users/logout">Logout</a>
        </div>
    </header>
    <section class="dashboard-section">
        <h1>Product Management</h1>
        <div class="action-links" style="text-align: center; margin-bottom: 20px;">
            <a href="/admin/products/new" class="submit-btn">Add New Product</a>
        </div>
        <% if (products && products.length > 0) { %>
        <table class="user-table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                <tr>
                    <td><%= product.productId || '' %></td>
                    <td><%= product.name %></td>
                    <td><%= product.description %></td>
                    <td>â‚±<%= product.price.toFixed(2) %></td>
                    <td>
                        <% if (product.imageUrl) { %>
                        <img src="<%= product.imageUrl %>" width="50" alt="<%= product.name %>"/>
                        <% } else { %>
                        No Image
                        <% } %>
                    </td>
                    <td>
                        <a href="/admin/products/edit/<%= product._id %>" class="btn-edit">Edit</a>
                        <form action="/admin/products/delete/<%= product._id %>" method="POST" class="delete-form" style="display:inline;">
                            <button type="submit" class="btn-delete" onclick="return confirm('Delete this product?')">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p>No products available. <a href="/admin/products/new">Add the first product!</a></p>
        <% } %>
    </section>
    <footer>
        <p>&copy; 2025 Delulu Delata. All rights reserved.</p>
    </footer>
</body>
</html>
